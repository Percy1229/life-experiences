<div class="sign-up container">
<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <h1 class="pt-4 pb-2">Sign up</h1>
        <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="form-group">
            <i class="fa fa-user"></i> 
            <%= f.label :name, 'User name' %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'お名前を入力してください' %>
        </div>
        <div class="form-group">
            <i class="fa fa-envelope"></i> 
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレスを入力してください' %>
        </div>
        <div class="form-group">
            <i class="fa fa-lock"></i> 
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'パスワードを入力してください' %>
        </div>
        <div class="form-group">
            <i class="fas fa-key"></i> 
            <%= f.label :password_confirmation, 'Enter password again' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div class="form-group">
        
        <%= f.submit 'Sign up', class: 'btn button btn-block' %>
        
        <% end %>
        
    </div>
</div>
</div>
