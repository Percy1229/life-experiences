<div class="row">
    <aside class="col-sm-4">
        <div class="card  text-center">
            <div class="card-header">
                <div class="card-title">
                <%= @user.name %>
            </div>
        </div>
            <div class="card-body">
                <img>
                <%= @user.introduce %><br>
                <% if current_user == @user %>
                <%= link_to 'Profile変更', edit_user_path(current_user) %>
                <% end %>
            </div>
        </div>
    </aside>
    <div class="col-sm-8">
        <ul class="nav nav-tabs nav-justified mb-3">
            <li class="nav-item">
            <a href="<%= user_path(@user) %>" 
            class="nav-link <%= 'active' if current_page?(user_path(@user)) %>"
            ><%= @user.name %>'s post
            </a>
            </li>
            
            <li class="nav-item">
                <a href="<%= likes_user_path(@user) %>"
                class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">
                    <%= @user.name %>'s favorite
                </a>
            </li>
        </ul>
<%= render 'experiences/experiences', users: @users, experiences: @experiences %>
    </div>
</div>
