<% unless current_user = experience %>
<% if current_user.favorite?(experience) %>
<%= form_with(model: current_user.relationships.find_by(favorite_id: experience.id), local: true, method: :delete) do |f| %>
<%= hidden_field_tag :favorite_id, experience.id %>
<%= f.submit 'Unfavorite' %>
<% end %>

<% else %>

<%= form_with(model: current_user.relationships.build, local: true) do |f| %>
<%= hidden_field_tag :favorite_id, experience.id %>
<%= f.submit 'Favorite' %>

<% end %>
<% end %>
<% end %>
