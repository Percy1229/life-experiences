<%= form_with(model: @experience, local: true) do |f| %>
<div class="form-group">
    <%= f.label :year, 'Year' %>
    <%= f.number_field :year, class: 'form-control', rows: 5 %>
</div>
<div class="form-group">
    <%= f.text_area :content, class: 'form-control' %>
</div>
<%= f.submit 'Post', class: 'btn-primary btn-block' %>

<% end %>