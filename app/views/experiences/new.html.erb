<div class="content container">
<div class="row">
<div class="col-sm-6 offset-sm-3">
<h1 class="pt-4 pb-2">Post</h1>
<%= form_with(model: @experience, local: true) do |f| %>
<div class="form-group">
    <%= f.label :year, 'Year' %>
    <%= f.number_field :year, class: 'form-control', placeholder: "Enter year"%>
</div>
<div class="form-group">
    <%= f.label :content, 'Experience' %>
    <%= f.text_area :content, class: 'form-control', placeholder: "Enter your experience" %>
</div>
<%= f.submit 'POST', class: 'btn button btn-block' %>

<% end %>
</div>
</div>
</div>